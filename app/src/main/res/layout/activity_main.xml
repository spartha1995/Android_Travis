<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context="com.promactinfotech.calculatorapp.MainActivity"
    android:weightSum="5"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activity_main"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/display"
        android:textSize="60sp"
        android:inputType="text"
        android:maxLines="1"
        android:textAlignment="viewEnd"
        android:text="0"
        android:focusable="false"
        android:layout_weight="1"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/display_result"
        android:textSize="45sp"
        android:textAlignment="viewEnd"
        android:text=""
        android:layout_weight="1"
        android:lines="1"/>


    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:rowCount="4"
        android:columnCount="4">

    <Button
        android:id="@+id/key_eight"
        android:textSize="50sp"
        android:text="8"
        android:onClick="keyPressed"
        android:layout_gravity="fill"
        android:layout_row="0"
        android:layout_column="1"/>

    <Button android:id="@+id/key_nine"
        android:textSize="50sp"
        android:text="9"
        android:onClick="keyPressed"
        android:layout_gravity="fill"
        android:layout_row="0"
        android:layout_column="2"/>

    <Button android:id="@+id/key_plus"
        android:textSize="50sp"
        android:text="+"
        android:onClick="keyPressed"
        android:layout_gravity="fill_vertical"
        android:layout_rowSpan="2"/>

    <Button
        android:id="@+id/key_four"
        android:textSize="50sp"
        android:text="4"
        android:onClick="keyPressed"
        android:layout_gravity="fill"
        android:layout_row="1"
        android:layout_column="0"/>

    <Button
        android:id="@+id/key_five"
        android:textSize="50sp"
        android:text="5"
        android:onClick="keyPressed"
        android:layout_gravity="fill"
        android:layout_row="1"
        android:layout_column="1"/>

    <Button
        android:id="@+id/key_six"
        android:textSize="50sp"
        android:text="6"
        android:onClick="keyPressed"
        android:layout_gravity="fill"
        android:layout_row="1"
        android:layout_column="2"/>

    <Button
        android:id="@+id/key_one"
        android:textSize="50sp"
        android:text="1"
        android:onClick="keyPressed"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_column="0"/>

    <Button
        android:id="@+id/key_three"
        android:textSize="50sp"
        android:text="3"
        android:onClick="keyPressed"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_column="2"/>

    <Button
        android:id="@+id/key_minus"
        android:textSize="50sp"
        android:text="-"
        android:onClick="keyPressed"
        android:layout_gravity="fill_vertical"
        android:layout_rowSpan="2"/>

    <Button
        android:id="@+id/key_clear"
        android:textSize="50sp"
        android:text="C"
        android:onClick="keyPressed"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:layout_column="0"/>

    <Button
        android:id="@+id/key_equal"
        android:textSize="50sp"
        android:text="="
        android:onClick="keyPressed"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:layout_column="2"/>

    <Button
        android:id="@+id/key_seven"
        android:textSize="50sp"
        android:text="7"
        android:onClick="keyPressed"
        android:layout_gravity="fill"
        android:layout_row="0"
        android:layout_column="0"
        android:gravity="center"/>

    <Button
        android:id="@+id/key_zero"
        android:textSize="50sp"
        android:text="0"
        android:onClick="keyPressed"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:layout_column="1"/>

    <Button
        android:id="@+id/key_two"
        android:textSize="50sp"
        android:text="2"
        android:onClick="keyPressed"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_column="1"/>

</GridLayout>

</LinearLayout>